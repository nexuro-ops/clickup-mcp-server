# ClickUp MCP Server - Local Development Configuration
# Copy this file to .env.local and fill in with your actual values
# DO NOT commit .env.local to git

# Required: ClickUp Personal API Token
# Get your token from: https://app.clickup.com/settings/integrations/api
# See SECURITY.md for information about token security
CLICKUP_PERSONAL_TOKEN=your_personal_api_token_here

# Optional: Server configuration
LOG_LEVEL=info
NODE_ENV=development
PORT=3000

# Optional: Encryption key for encrypting the token at rest
# If not provided, a random key will be generated each time the server starts
# ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here
